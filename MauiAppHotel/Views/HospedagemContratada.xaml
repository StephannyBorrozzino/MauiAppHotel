<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suíte Super Luxo" 
               TextColor="{StaticResource Primary}"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">

            <HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="Adultos: " />
                    <Label Text="2" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Crianças: " />
                    <Label Text="1" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>
                
            </HorizontalStackLayout>
            
        </Frame>

        <Frame Margin="10" >

            <Grid RowDefinitions="*, *, *"
                  ColumnDefinitions="Auto, Auto" >

                <Label Grid.Column="0" Grid.Row="0" Text="Check-in: " />
                <Label Grid.Column="0" Grid.Row="1" Text="Check-out: "/>
                <Label Grid.Column="0" Grid.Row="2" Text="Estadia: "/>

                <Label Grid.Column="1" Grid.Row="0" Text="24/10/2025" />
                <Label Grid.Column="1" Grid.Row="1" Text="31/10/2025"/>
                <Label Grid.Column="1" Grid.Row="2" Text="7"/>

            </Grid>

        </Frame>

        <Frame Margin="10">

            <HorizontalStackLayout>

                <Label Text="Valor Total:" />
                <Label Text="R$ 750,00" />

            </HorizontalStackLayout>
            
        </Frame>

        <Button Text="Voltar" 
                Clicked="Button_Clicked"
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>