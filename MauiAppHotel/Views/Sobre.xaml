<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"        NavigationPage.HasNavigationBar="False"
         BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                     Padding="10"
                     Spacing="10">

        <Label Text="Sobre"
           FontFamily="Kalam"
           FontSize="45"
           FontAttributes="Bold"
           TextColor="{StaticResource Primary}" />

        <Frame Padding="10">
            <VerticalStackLayout>

                <Label Text="Desenvolvido por: Stephanny Borrozzino" 
                       FontSize="20"
                       Margin="10"/>

                <Label Text="Ano Desenvolvido: 2025" 
                       FontSize="20"
                       Margin="10"/>

                <Label Text="Desenvolvido em: .NET MAUI" 
                       FontSize="20"
                       Margin="10"/>

            </VerticalStackLayout>
        </Frame>

        <Button Text="Informações sobre" 
            BackgroundColor="{StaticResource Gray500}"
            Clicked="Button_voltarSobre"/>

    </VerticalStackLayout>

</ContentPage>